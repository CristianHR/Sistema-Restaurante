doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    title #{title}
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/app.css')
    script(src='http://code.jquery.com/jquery-2.1.4.min.js')
    script(src='/javascripts/appadmin.js')
    script(src='/javascripts/web.js')
    script(src='/javascripts/platos.js')
    script(src='/javascripts/jquery.hideseek.js')
  body
   header.header(data-role="role")
    div.header--Cont
     div.header--Cont--Iz
      figure.header--Cont--Figure
       h1.Title
        | LaCatedralDelPisco
     div.header--Cont--Center
      div.Center--Day
       article.article
        div.article--Icon
         i(class="fa fa-sun-o")
        div.article--Data
         span.title.jsTitleHeader
          | ALMUERZO 
         span.title.jsTitleSubHeader
          strong.jsTitleDay
          strong.jsTitleMounth

      div.Center--Time
        h1.time--Title
      div.Center--Clima
     div.headder--Cont--De
      nav.header--Cont--Nav
       ul.ul
        li.list
         a.link(href="../panel")
          i(class="fa fa-cutlery")
        li.list
         a.link(href="../mesas")
          i(class="fa fa-shopping-basket")
        li.list
         a.link(href="../ventas")
          i(class="fa fa-usd")
        li.list
         a.link(href="../modulos")
          i(class="fa fa-cubes")
        li.list
         a.link(href="../administracion")
          i(class="fa fa-cog")
        li.list
         i(class="fa fa-user")
         | #{username}
  main
    section.content
     header.contenido--Header
      div.contenido--HeaderTitle
       h2.title
        | AdministraciÃ³n > Platos
      div.contenido--Filter
       input(type="text", class="searchFilter", placeholder="Filtrado por categorias", name="search", data-list=".data-list")
     section.contenido--Details
      ul.ul--Details
       li.list
        | Nombre
       li.list
        | Precio
       li.list
        | Categoria
       li.list
        | Codigo
      div.details--Cont.jsPlatosAdd


    aside.aside
     form.aside--Form.jsFormPlatos(method="GET")
      header.aside--Form--Header
       h2.title
       | Nuevo Plato
      div.jsPreload.cssPreload
       img(src="../images/ring-alt.svg", alt="")
       header.cssPreload--Header
        h2.title
         | Plato Creado
      div.aside--Form--Fieldset.jsHide
       div.fieldset--Iz
        label.title
         | Nombre
       div.fieldset--De
        input(type="text", name="nombrePlato", class="nombrePlato")
      div.aside--Form--Fieldset.jsHide
       div.fieldset--Iz
        label.title
         | Precio
       div.fieldset--De
        input(type="text", name="precioPlato", class="precioPlato")
      div.aside--Form--Fieldset.jsHide
       div.fieldset--Iz
        label.title
         | Categoria:
       div.fieldset--De
        select(name="category", class="categoryPlato")
         option(value="Entradas")
          |Entradas
         option(value="Ceviches")
          |Ceviches
         option(value="PescadosMariscos")
          |Pescados y Mariscos
         option(value="Tiraditos")
          |Tiraditos
         option(value="Lechedetigre")
          |Leche de tigre
         option(value="Sudadoschupes")
          |Sudados y Chupes
         option(value="Segundosmarinos")
          |Segundos Marinos
         option(value="ChicharronesMarinos")
          |Chicharrones Marinos
         option(value="Trilogias")
          |Trilogias
         option(value="TacuTacus")
          |Tacu Tacus
         option(value="Chicharrones")
          |Chicharrones
         option(value="Guarniciones")
          |Guarniciones
         option(value="Sopascriollas")
          |Sopas Criollas
         option(value="Chifas")
          |Chifas
         option(value="Polloalabrasa")
          |Pollo a la brasa
      div.aside--Form--Fieldset.jsHide
       div.fieldset--Iz
        label.title
         | Codigo
       div.fieldset--De
        input(type="text", name="codigoPlato", class="codigoPlato")
      div.aside--Form--Fieldset.jsHide
       input(class="send", type="submit", value="Crear Plato")
     form.aside--Form.jsFormPlatosDelete(method="get")
      header.aside--Form--Header
       h2.title
       | Eliminar Plato
      div.aside--Form--Fieldset
       div.fieldset--Iz
        label.title
         | Plato
       div.fieldset--De.mozosDelete
        select(name="", class="platosDelete--Select")
         option(value="seleciona")
          | Seleciona
      div.aside--Form--Fieldset
       input(class="sendDelete", type="submit", value="Eliminar Mozo")
